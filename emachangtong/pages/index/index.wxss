/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
  border: 1px solid #aaa;
  border-radius: 5rpx;
  padding: 7rpx 10rpx;
}
.user-motto{
  color: coral;
}
.container{
  padding: 0rpx;
  box-sizing: border-box;
  background-color: #f8f8f8;
}
.nav{
  width: 100%;
  height: 300rpx;
  background-color: #3a82ff;
}
.nav .nav-item{
  margin-top: 80rpx;
  margin-left: 50rpx;
  color: #ffffff;
}
.nav .nav-item .quick{
  font-weight: 700;
}
.clearfix:after {
  content: "";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}
.signin{
  width: 100%;
  height: 320rpx;
  padding: 10rpx;
  box-sizing: border-box;
  background-color: #ffffff;
  overflow: hidden;
}
.signin-item{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  display: inline-block;
  overflow: hidden;
  background-color: #ffffff;
}
.car-number{
  border-bottom: 1px solid #ccc;
}
.phone-number{
  border-bottom: 1px solid #ccc;
}
.car-number .car-text{
  float: left;
  margin-right: 50rpx;
}
.car-number .num-input{
  float: left;
  margin-top: 28rpx;
}
.num-input .province{
  position: relative;
  float: left;
  width: 80rpx;
  height: 50rpx;
  margin-right: 20rpx;
  line-height: 50rpx;
  color: #ffffff;
  background-color: #3a82ff;
}
.num-input .province-btn{
  position: absolute;
  left: 40rpx;
  top:25rpx;
  width: 0;
  border-top: 15rpx solid #ffffff;
  border-right: 15rpx solid transparent;
  border-bottom: 15rpx solid transparent;
  border-left: 15rpx solid transparent;
}
.num-input .carNum{
  float: left;
  width: 300rpx;
}
.phone-number .phone-text{
  float: left;
  margin-right: 50rpx;
}
.phone-number input{
  float: left;
  margin-top: 25rpx;
}
.check-number .check-text{
  float: left;
  margin-right: 80rpx;
}
.check-number .check-input{
  float: left;
  width: 232rpx;
  margin-top: 28rpx;
  margin-right: 20rpx;
}
.check-number .get-check{
  float: left;
  width: 190rpx;
  height: 60rpx;
  line-height: 40rpx;
  margin-top: 20rpx;
  padding: 10rpx 10rpx;
  font-size: 14px;
  text-align: center;
  color: #3a82ff;
  border: 1px solid #3a82ff;
  box-sizing: border-box;
}
.get-start{
  width: 50%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 20px;
  margin-top: 40rpx;
  margin-bottom: 20rpx;
  text-align: center;
  color: #ffffff;
  background-color: #3a82ff;
  border-radius: 50rpx;
}
.first{
  font-size: small;
  color: darkgrey;
  margin-bottom: 10rpx;
}
.bottom{
  display: none;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 43%;
  padding: 20rpx 10rpx;
  box-sizing: border-box;
  background-color: darkgrey;
}
.bottom .province-list{
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-content: center;
  padding: 0rpx;
  box-sizing: border-box;
}
.bottom .province-item{
  float: left;
  width: 8%;
  height: 70rpx;
  text-align: center;
  margin: 15rpx 16rpx;
  box-sizing: border-box;
  border-radius: 5rpx;
  background-color: #ffffff;
  line-height: 70rpx;
}
.province-list .hide-item{
  float: left;
  width: 33%;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  margin: 15rpx 16rpx;
  color: #ffffff;
  background-color: gray;
}
.del_box{
  display:block;
}
.hide_box{
  display:none;
}