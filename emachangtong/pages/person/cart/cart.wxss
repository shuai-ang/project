/* pages/person/cart/cart.wxss */
page{
  height: 100%;
  background-color: #eeeeee;
}
.container{
  width: 100%;
  background-color: #f8f8f8;
  padding: 20rpx;
}
.no-data{
  text-align: center;
  color: #9e9fa4;
  display: none;
}
.no-data image{
  margin-top: 280rpx;
  margin-bottom: 40rpx;
  width: 335rpx;
  height: 290rpx;
}
.cart-info{
  width: 100%;
  
}
.cart-item{
  position: relative;
  width: 100%;
  height: 224rpx;
  padding: 30rpx;
  box-sizing: border-box;
  border-radius: 20rpx;
  background-color: #ffffff;
}
.cart-item .cart-img{
  float: left;
}
.cart-item .cart-img image{
  width: 158rpx;
  height: 174rpx;
  margin-right: 30rpx;
}
.cart-item .number{
  float: left;
}
.cart-item .number .car-num{
  font-size: 40rpx;
  font-weight: 700;
  margin-top: 34rpx;
  margin-bottom: 20rpx;
}
.phone-num{
  font-size: 32rpx;
  color: #9c9aa7;
}
.cart-item .right{
  position: absolute;
  right: 0;
  top: 40rpx;
  width: 150rpx;
  height: 45rpx;
  line-height: 45rpx;
  text-align: center;
  font-size: 12px;
  color: #ffffff;
  border-radius: 22rpx 0 0 22rpx;
  background-color: #6688ff;
}