/* pages/person/person.wxss */
@import "../../style/stylesheet.wxss";
.container{
  position: relative;
  padding: 0rpx;
  box-sizing: border-box;
  background-color: #f8f8f8;
}
.clearfix:after {
  content: "";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}
.title{
  width: 100%;
  height: 400rpx;
  background-color: turquoise;
}
.title .title-img{
  float: left;
  margin-top: 80rpx;
}
.title .title-name{
  float: left;
  margin-top: 120rpx;
  font-size: 12px;
  color: #ffffff;
}
.title .title-name .name{
  font-size: 20px;
  margin-bottom: 20rpx;
}
.userinfo-avatar {
  width: 150rpx;
  height: 150rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.person-content{
  position: absolute;
  top: 300rpx;
  width: 90%;
  height: 550rpx;
  background-color: #ffffff;
}
.person-content .nav{
  width: 100%;
  height: 200rpx;
  margin-bottom: 20rpx;
  background-color: #ffffff;
}
.person-content .nav .order{
  float: left;
  width: 49%;
  height: 100%;
  text-align: center;
}
.person-content .nav .cart{
  float: right;
  width: 49%;
  height: 100%;
  text-align: center;
}
.person-content .nav .line{
  float: left;
  width: 1px;
  height: 100rpx;
  margin-top: 50rpx;
  background-color: #ccc;
}
.num{
  margin-top: 40rpx;
  margin-bottom: 10rpx;
  font-size: 24px;
  font-weight: 500;
  color: #3a82ff;
}
.person-content .main{
  width: 100%;
  height: 300rpx;
  padding: 20rpx;
  box-sizing: border-box;
}
.person-content .main .item{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1px solid #eaeaea;
  box-sizing: border-box;
}
.person-content .main .problem.item{
  border-bottom: solid transparent;
}
.person-content .main .menu{
  float: left;
  height: 99rpx;
}
.main .menu .iconfont{
  color: #3a82ff;
  font-size: 18px;
  margin-right: 20rpx;
}
.person-content .main .icon-right{
  float: right;
  color: #ccc;
}