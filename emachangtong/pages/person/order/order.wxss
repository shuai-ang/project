/* pages/person/order/order.wxss */
page{
  height: 100%;
  background-color: #eeeeee;
}
.container{
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #f8f8f8;
}
.no-order{
  display: block;
  text-align: center;
}
.no-order .order-img image{
  margin-top: 280rpx;
  margin-bottom: 40rpx;
  width: 335rpx;
  height: 290rpx;
}
.no-order .order-text{
  color: #9e9fa4;
}
.order-list{
  display: none;
  width: 100%;
  padding: 20rpx;
  background-color: #ffffff;
}
.order-list .order-time{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
}
.order-list .order-time .order-text{
  float: left;
  font-size: 14px;
  color: #9c9ea8;
}
.order-list .order-time .post{
  float: right;
  color: #3a82ff;
  font-weight: 500;
}
.order-list .order-detail{
  width: 100%;
  border-top: 1px solid #eaeaea;
  border-bottom: 1px solid #eaeaea;
}
.order-list .order-detail .order-item{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
}
.order-list .drawback{
  width: 100%;
  height: 100rpx;
}
.order-list .drawback .back{
  float: right;
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin-top: 20rpx;
  text-align: center;
  border: 1px solid #eaeaea;
}