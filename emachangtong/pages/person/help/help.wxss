/* pages/person/help/help.wxss */
@import "../../../style/stylesheet.wxss";
page{
  position: relative;
  height: 100%;
  background-color: #f8f8f8;
}
.container{
  height: auto;
  padding: 0rpx;
  box-sizing: border-box;
  
}
.clearfix:after {
  content: "";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}
.title{
  width: 100%;
  height: 400rpx;
  background-color: #3a82ff;
}
.title .title-list{
  width: 600rpx;
  height: 180rpx;
  text-align: center;
  color: #ffffff;
  margin: 60rpx auto;
}
.title .title-list .title-help{
  font-size: 24px;
  margin-bottom: 20rpx;
}
.title .title-list .title-desc{
  font-size: 14px;
}
.main{
  position: absolute;
  top:300rpx;
  width: 90%;
  z-index: 9;
}
.main .problem-item.problem1{
  height: 400rpx;
}
.main .problem-item{
  width: 100%;
  height: 400rpx;
  padding: 40rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;
  background-color: #ffffff;
  border-radius: 5rpx;
}
.main .problem-item .item-title{
  text-align: center;
  font-size: 20px;
  font-weight: bold;
}
.main .problem-item .question{
  width: 100%;
  margin-top: 20rpx;
}
.main .problem-item .question .question1{
  margin-bottom: 20rpx;
  font-size: 14px;
}
.problem-item .question .num{
  float: left;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  margin-right: 10rpx;
  border-radius: 50%;
  text-align: center;
  color: #ffffff;
  background-color: #3a82ff;
}
.problem-item .question .question1 .quest-text{
  
  text-align: left;
  overflow: hidden;
}
.main .problem-item .attention{
  width: 90%;
  height: 55rpx;
  line-height: 55rpx;
  text-align: center;
  color: #ffffff;
  font-size: 30rpx;
  margin: 0 auto;
  border-radius: 50rpx;
  background-color: #ff2424;
}
.main .good-tab{
  width: 100%;
  height: 200rpx;
  background-color: #ffffff;
  z-index: 99;
}
.main .good-tab .tab-item{
  float: left;
  width: 33.33%;
  height: 100%;
  text-align: center;
}
.good-tab .tab-item .tab-icon .iconfont{
  font-size: 28px;
  color: #d67609;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
}
.good-tab .tab-item .tab-text{
  font-size: 14px;
}
.bottom{
  position: absolute;
  top: 1480rpx;
  text-align: center;
  font-size: 18px;
  padding-top: 100rpx;
  box-sizing: border-box;
  width: 100%;
  height: 200rpx;
  color: #ffffff;
  background-color: #3a82ff;
  z-index: 1;
}