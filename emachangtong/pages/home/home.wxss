/* pages/home/home.wxss */
@import "./tab-template/tab-template.wxss";
.home{
  position: relative;
  width: 100%;
  background-color: #f8f8f8;
}
.swiper{
  width: 100%;
  height: 500rpx;
}
.swiper-img{
  width: 100%;
  height: 100%;
}
.contain{
  position: absolute;
  top: 400rpx;
  left: 5%;
  width: 90%;
  margin-bottom: 80rpx;
  background-color: #f8f8f8;
}
.nav{
  width: 100%;
  height: 180rpx;
  padding: 30rpx 30rpx;
  background-color: #ffffff;
  box-sizing: border-box;
  margin-bottom: 30rpx;
}
.nav .name{
  width: 100%;
  margin-bottom: 30rpx;
  overflow: hidden;
}
.nav .guanfang{
  float: left;
  font-size: 12px;
  padding: 0 2rpx;
  color: #3a82ff;
  margin-right: 20rpx;
  box-sizing: border-box;
  border: 1px solid #3a82ff;
}
.nav .name-text{
  float: left;
  font-size: 15px;
  font-weight: 500;
  font-family: Georgia, 'Times New Roman', Times, serif;
}
.name .price{
  height: 50rpx;
  overflow: hidden;
}
.price .get{
  float: left;
  width: 250rpx;
  height: 50rpx;
  line-height: 50rpx;
  margin-right: 16rpx;
  font-size: 14px;
  font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
  text-align: center;
  background-color: #ff0000;
  color: #ffffff;
  border-radius: 8rpx 40rpx 40rpx 0rpx;
}
.price .price-text{
  float: left;
  color: #ff0000;
  text-decoration: line-through;
}
.content{
  position: relative;
  width: 100%;
  height:400rpx;                                                                                                              background-color: #ffffff;
  margin-bottom: 30rpx;
}
.content .action{
  width: 100%;
  height: 300rpx;
}
.action .action-icon{
  width: 60rpx;
  height: 60rpx;
  margin: 35rpx auto;
}
.action .action-item{
  float: left;
  font-size: 14px;
  text-align: center;
  width: 33.33%;
  height: 100%;
}
.action .action-item .mid{
  font-size: 14px;
  margin-bottom: 20rpx;
}
.action .action-item .end{
  font-size: 12px;
  color: #9c9ea8;
  white-space: pre-wrap;
}
.online{
  width: 600rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  margin: 0 auto;
  color: #3a82ff;
  border: 1px solid #3a82ff;
  border-radius: 6rpx;
}
.desc{
  width: 100%;
  height: 2000rpx;
  background-color: #ffffff;
  padding: 20rpx;
  box-sizing: border-box;
}
.desc .product-text{
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  margin-bottom: 30rpx;
  font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
  padding-left: 10rpx;
  border-left: 2px solid #3a82ff;
}
.desc .img-item{
  width: 100%;
}
.bottom{
  position: fixed;
  top: 90%;
  left: 10%;
  width: 80%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
  margin: 0 auto;
  color: #ffffff;
  background-color: #3a82ff;
  border-radius: 60rpx;
}
